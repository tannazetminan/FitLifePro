<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciseDemosActivity">

    <TextView
        android:id="@+id/txtViewExDemos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/txtViewExDemos"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtViewExDemosBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtViewExDemos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/txtViewExDemosBanner"
        android:textSize="25sp" />

    <WebView
        android:id="@+id/webViewExDemos"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/txtViewExDemosBanner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>