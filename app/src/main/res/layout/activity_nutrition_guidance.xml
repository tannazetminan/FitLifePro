<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NutritionGuidanceActivity">

    <TextView
        android:id="@+id/txtViewNutGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/txtViewNutGuide"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtViewNutGuideBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtViewNutGuide"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/txtViewNutGuideBanner"
        android:textSize="25sp" />

    <WebView
        android:id="@+id/webViewTop"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/txtViewNutGuideBanner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scrollbarSize="25sp" />

</RelativeLayout>