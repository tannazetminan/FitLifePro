<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    tools:context=".SettingsActivity">

    <ImageView
        android:id="@+id/imgViewBackToExerciseList"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Back"
        android:src="@drawable/btn_arrow" />

    <TextView
        android:id="@+id/txtViewSettingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/imgViewBackToExerciseList"
        android:text="Settings"
        android:textColor="#E2FEFEFE"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/switchNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Notifications"
        android:layout_centerHorizontal="true"
        android:textColor="#E2FEFEFE" />

    <Switch
        android:id="@+id/switchLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="GPS"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/switchNotifications"
        android:textColor="#E2FEFEFE" />


    <TextView
        android:id="@+id/appCompatTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adjust Audio Level"
        android:layout_marginTop="5dp"
        android:layout_below="@id/seekBarAudio"
        android:layout_centerHorizontal="true"
        android:textColor="#E2FEFEFE" />

    <SeekBar
        android:id="@+id/seekBarAudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/switchLocation"
        android:max="100"
        android:thumbTint="#E2FEFEFE" />
</RelativeLayout>